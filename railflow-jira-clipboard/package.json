{
  "name": "react-typescript-chrome-extension-boilerplate",
  "description": "Minimal boilerplate for making chrome extensions using React and TypeScript",
  "version": "1.0.0",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@emotion/react": "11.11.1",
    "@mantine/core": "6.0.21",
    "@mantine/hooks": "6.0.21",
    "@tabler/icons-react": "^2.47.0",
    "@tanstack/react-query": "^4.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/chrome": "^0.0.260",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "html-webpack-plugin": "^5.6.0",
    "papaparse": "^5.4.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn run build:offscreen && yarn run build:popup",
    "build:offscreen": "REACT_APP_BUILD_TARGET=offscreen INLINE_RUNTIME_CHUNK=false craco build",
    "build:popup": "REACT_APP_BUILD_TARGET=popup INLINE_RUNTIME_CHUNK=false craco build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
